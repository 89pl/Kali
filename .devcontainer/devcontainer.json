{
  "name": "Kali Rolling (Runtime Install)",
  "image": "kalilinux/kali-rolling:latest",
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "32gb"
  },
  "privileged": true,
  "overrideCommand": false,
  "postCreateCommand": "sudo apt update && sudo apt -y install kali-linux-everything",
  "remoteUser": "kali",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "upgradePackages": true,
      "username": "kali",
      "userUid": "1001",
      "userGid": "1001"
    }
  }
}
